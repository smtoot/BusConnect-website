# ============================================
# BusConnect Customer Booking Site
# Environment Variables Configuration
# ============================================

# Copy this file to .env.local for development
# For production, set these in your hosting platform (e.g., Vercel)

# --------------------------------------------
# API Configuration
# --------------------------------------------
# Development: http://localhost:3001
# Production: https://your-backend-domain.com
NEXT_PUBLIC_API_URL=http://localhost:3001

# --------------------------------------------
# Stripe Configuration
# --------------------------------------------
# Get your keys from: https://dashboard.stripe.com/apikeys
# Development: Use test keys (pk_test_...)
# Production: Use live keys (pk_live_...)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_key_here

# --------------------------------------------
# Internationalization
# --------------------------------------------
# Default locale: 'ar' (Arabic) or 'en' (English)
NEXT_PUBLIC_DEFAULT_LOCALE=ar

# --------------------------------------------
# Site Configuration
# --------------------------------------------
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_SITE_NAME=BusConnect

# --------------------------------------------
# Analytics & Monitoring (Production Only)
# --------------------------------------------
# Google Analytics: https://analytics.google.com
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=

# Sentry Error Tracking: https://sentry.io
NEXT_PUBLIC_SENTRY_DSN=

# --------------------------------------------
# Feature Flags
# --------------------------------------------
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# --------------------------------------------
# Backend Integration
# --------------------------------------------
# The URL of the real backend API (e.g., http://localhost:3001/api)
BACKEND_API_URL=http://localhost:3001/api
# The Service Account Token for authenticating with the backend
BACKEND_API_TOKEN=your_service_account_token_here
